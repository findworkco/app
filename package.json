{
  "name": "app",
  "description": "Web application for https://findwork.co/",
  "version": "1.0.0",
  "homepage": "https://github.com/twolfson/find-work-app",
  "author": {
    "name": "Todd Wolfson",
    "email": "todd@twolfson.com",
    "url": "http://twolfson.com/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/twolfson/find-work-app.git"
  },
  "bugs": {
    "url": "https://github.com/twolfson/find-work-app/issues"
  },
  "engines": {
    "node": "4.4.1"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "gulp build-clean && gulp build",
    "develop": "gulp build-clean && gulp develop",
    "lint": "twolfson-style lint server/ test/",
    "gemini-gui": "gemini-gui test/visual",
    "gemini-update": "npm run verify-webdriver-running && gemini update test/visual",
    "gemini-test": "npm run verify-webdriver-running && gemini test --reporter html --reporter flat test/visual",
    "postinstall": "bower install && (npm run webdriver-update || true) && npm run build",
    "start": "node bin/find-work",
    "start-develop": "ENV=development nodemon --exec bin/find-work --ignore dist --ignore public",
    "start-test-redis": "bin/start-test-redis.sh",
    "test": "npm run lint && npm run start-test-redis && npm run test-server && npm run verify-images-optimized",
    "test-server": "ENV=test mocha --recursive test/server",
    "verify-images-optimized": "test/verify-images-optimized.sh",
    "verify-webdriver-running": "curl --silent http://localhost:4444/ > /dev/null || (echo \"Webdriver isn't running, please start it via \\`npm run webdriver-start\\`\" 1>&2 && exit 1)",
    "webdriver-start": "xvfb-run webdriver-manager start",
    "webdriver-update": "webdriver-manager update"
  },
  "dependencies": {
    "alertify.js": "~1.0.11",
    "body-parser-multidict": "~1.0.1",
    "connect-flash": "~0.1.1",
    "connect-redis": "~3.0.2",
    "country-data": "0.0.24",
    "csurf": "~1.9.0",
    "express": "~4.13.4",
    "express-session": "~1.13.0",
    "jade": "~1.11.0",
    "moment": "~2.12.0",
    "moment-timezone": "~0.5.3",
    "querystring-multidict": "~1.0.0",
    "redis": "~2.6.0-2",
    "sanitize-html": "~1.11.4",
    "shallow-settings": "~0.1.0",
    "underscore": "~1.8.3"
  },
  "optionalDependencies": {
    "bootstrap-datepicker": "~1.6.0",
    "bower": "~1.7.7",
    "browserify": "~13.0.0",
    "browsernizr": "~2.1.0",
    "gulp": "~3.9.1",
    "gulp-buffer": "0.0.2",
    "gulp-csso": "~1.1.0",
    "gulp-imagemin": "~2.4.0",
    "gulp-livereload": "~3.8.1",
    "gulp-notify": "~2.2.0",
    "gulp-sass": "~2.2.0",
    "gulp-sizereport": "~1.1.3",
    "gulp-svgmin": "~1.2.2",
    "gulp-uglify": "~1.5.3",
    "jquery": "~2.2.3",
    "rimraf": "~2.5.2",
    "timepicker": "~1.8.11",
    "vinyl-buffer": "~1.0.0",
    "vinyl-source-stream": "~1.1.0",
    "watchify": "~3.7.0",
    "wysiwyg.js": "git://github.com/twolfson/wysiwyg.js.git#9658fc4"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "cheerio": "git://github.com/twolfson/cheerio.git#e65ad72",
    "extract-values": "~0.1.2",
    "gemini": "~3.0.2",
    "gemini-gui": "~3.0.0",
    "jscs": "~1.7.3",
    "jshint": "~2.5.10",
    "mocha": "~2.4.5",
    "nodemon": "~1.9.2",
    "request": "~2.72.0",
    "twolfson-style": "~1.6.0",
    "webdriver-manager": "~10.0.1"
  },
  "keywords": [],
  "private": true
}
